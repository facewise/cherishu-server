<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_PATH" value="/home/ubuntu/log"/>
    <property name="LOG_FILE" value="cherish.log"/>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProfile name="local">
        <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
        <logger name="cherish.backend" level="DEBUG"/>
        <logger name="org.springframework.web.servlet.mvc" level="DEBUG"/>
        <logger name="org.springframework.web.cors" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="dev,main">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/${LOG_FILE}</file>
            <encoder>
                <charset>${FILE_LOG_CHARSET}</charset>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] --- [%15.15t] [%36.36logger{36}] : %m%n%wEx</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>14</maxHistory>
            </rollingPolicy>
        </appender>
        <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestResponseBodyMethodProcessor" level="DEBUG"/>
        <logger name="org.springframework.web.cors.DefaultCorsProcessor" level="DEBUG"/>
        <root level="DEBUG">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>